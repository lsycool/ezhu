<view class="wux-class {{ classes.wrap }}">
    <view class="{{ classes.hd }} {{titleClass1 ? 'according-title' : ''}}" bindtap="onTap">
        <block wx:if="{{ thumb }}">
            <image class="{{ classes.thumb }}" src="{{ thumb }}" />
        </block>
        <block wx:if="{{ title }}">
            <view class="{{ classes.title }}">{{ title }}</view>
        </block>
        <block wx:else>
            <slot name="header"></slot>
        </block>
        <view class="{{ classes.arrow }}" wx:if="{{ showArrow }}"></view>
    </view>
    <view class="{{ classes.bd }}" style="{{titleClass1 ? 'padding:0' : ''}}">
        <view class="{{ classes.content }}" wx:if="{{ content }}">{{ content }}</view>
        <slot></slot>
    </view>
</view>